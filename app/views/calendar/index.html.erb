<h1>Funerals project</h1>

<%= month_calendar events: @events do |date, events| %>
  <div class="date">
    <%= date.day %>.<%= date.month %>.
  </div>

    <% @temperatures.length.times do |i| %>
      <% if date == (@today + i) %>
        <div class="weather">
        <p>Weather forecast:</p>
          <ul>
            <li><%= @temperatures[i] %>Â°C</li>
            <li><%= @forecasts[i] %></li>
            <li><%= image_tag "http://openweathermap.org/img/w/#{@icons[i]}.png" %></li>
          </ul>
        </div>
      <% end %>
    <% end %>
  

  <% events.each do |event| %>
    <div class="event">
      <%= link_to event.name, event_path(event) %>
    </div>
  <% end %>
<% end %>
